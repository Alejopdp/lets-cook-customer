{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@atoms": [
        "components/atoms"
      ],
      "@molecules": [
        "components/molecules"
      ],
      "@organisms": [
        "components/organisms"
      ],
      "@layouts": [
        "components/layout"
      ],
      "@lang": [
        "lang"
      ],
      "@stores": [
        "stores"
      ],
      "@helpers": [
        "helpers"
      ],
      "@hooks": [
        "hooks"
      ]
    },
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
